@model ConsertaPraMim.Web.Admin.Models.AdminChecklistTemplatesIndexViewModel
@{
    ViewData["Title"] = "Checklists Tecnicos";
    var includeInactive = Model?.IncludeInactive ?? true;
    var errorMessage = Model?.ErrorMessage;
    var templates = Model?.Templates ?? Array.Empty<ConsertaPraMim.Application.DTOs.AdminChecklistTemplateDto>();
    var categories = Model?.Categories ?? Array.Empty<ConsertaPraMim.Application.DTOs.AdminServiceCategoryDto>();
    var hasItems = templates.Any();
    var lastUpdatedUtc = Model?.LastUpdatedUtc ?? DateTime.UtcNow;
    var createUrl = Url.Action("Create", "AdminChecklistTemplates") ?? "/AdminChecklistTemplates/Create";
    var updateUrl = Url.Action("Update", "AdminChecklistTemplates") ?? "/AdminChecklistTemplates/Update";
    var updateStatusUrl = Url.Action("UpdateStatus", "AdminChecklistTemplates") ?? "/AdminChecklistTemplates/UpdateStatus";
}

<style>
    .admin-card {
        border: 0;
        border-radius: 14px;
        box-shadow: 0 10px 22px rgba(15, 23, 42, .08);
    }

    .admin-table th {
        font-size: .75rem;
        text-transform: uppercase;
        letter-spacing: .04em;
        color: #64748b;
        border-top: 0;
        white-space: nowrap;
    }

    .checklist-item-row {
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 12px;
        background: #f8fafc;
    }
</style>

<div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4">
    <div>
        <h1 class="h4 fw-bold mb-1">Checklists Tecnicos por Categoria</h1>
        <p class="text-muted mb-0">Defina itens obrigatorios para liberar a conclusao do atendimento em cada categoria.</p>
    </div>
    <div class="text-muted small">
        Atualizado em @lastUpdatedUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
    </div>
</div>

<div id="checklist-feedback" class="d-none alert mb-3"></div>

<form method="get" asp-action="Index" class="admin-card card mb-4">
    <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3">
        <div class="form-check form-switch m-0">
            @if (includeInactive)
            {
                <input class="form-check-input" type="checkbox" role="switch" id="includeInactive" name="includeInactive" value="true" checked>
            }
            else
            {
                <input class="form-check-input" type="checkbox" role="switch" id="includeInactive" name="includeInactive" value="true">
            }
            <label class="form-check-label" for="includeInactive">Exibir inativos</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-outline-secondary">
                <i class="fas fa-filter"></i> Aplicar
            </button>
            <button type="button" class="btn btn-primary" id="open-create-modal-btn">
                <i class="fas fa-plus"></i> Novo template
            </button>
        </div>
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <div class="admin-card card">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Templates de checklist</span>
            <span class="text-muted small">@templates.Count item(ns)</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0 admin-table">
                <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Template</th>
                    <th>Itens</th>
                    <th>Status</th>
                    <th>Atualizado</th>
                    <th class="text-end">Acoes</th>
                </tr>
                </thead>
                <tbody>
                @if (hasItems)
                {
                    @foreach (var template in templates)
                    {
                        var activeItemsCount = template.Items.Count(i => i.IsActive);
                        var requiredItemsCount = template.Items.Count(i => i.IsActive && i.IsRequired);
                        var templateJson = System.Text.Json.JsonSerializer.Serialize(template);
                        <tr data-template-id="@template.Id"
                            data-template-name="@template.Name"
                            data-template-active="@template.IsActive.ToString().ToLowerInvariant()">
                            <td>
                                <div class="fw-semibold">@template.CategoryName</div>
                                <div class="text-muted small">@template.LegacyCategory</div>
                            </td>
                            <td>
                                <div class="fw-semibold">@template.Name</div>
                                @if (!string.IsNullOrWhiteSpace(template.Description))
                                {
                                    <div class="text-muted small">@template.Description</div>
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary-subtle text-primary-emphasis">@activeItemsCount ativo(s)</span>
                                <span class="badge bg-warning-subtle text-warning-emphasis">@requiredItemsCount obrigatorio(s)</span>
                            </td>
                            <td>
                                <span class="badge @(template.IsActive ? "bg-success-subtle text-success-emphasis" : "bg-secondary-subtle text-secondary-emphasis")">
                                    @(template.IsActive ? "Ativo" : "Inativo")
                                </span>
                            </td>
                            <td class="text-muted">@(template.UpdatedAt?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? template.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm"))</td>
                            <td class="text-end">
                                <div class="d-inline-flex gap-2">
                                    <button type="button"
                                            class="btn btn-outline-secondary btn-sm js-edit-btn"
                                            data-template-script-id="template-json-@template.Id">
                                        <i class="fas fa-pen"></i> Editar
                                    </button>
                                    <button type="button" class="btn @(template.IsActive ? "btn-outline-danger" : "btn-outline-success") btn-sm js-toggle-status-btn">
                                        <i class="fas @(template.IsActive ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                        @(template.IsActive ? "Inativar" : "Ativar")
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <script type="application/json" id="template-json-@template.Id">@Html.Raw(templateJson)</script>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Nenhum template encontrado.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="modal fade" id="templateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-5" id="template-modal-title">Novo template de checklist</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="template-id" />
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label for="template-category" class="form-label fw-semibold">Categoria</label>
                        <select id="template-category" class="form-select">
                            <option value="">Selecione</option>
                            @foreach (var category in categories.Where(c => c.IsActive).OrderBy(c => c.Name))
                            {
                                <option value="@category.Id">@category.Name (@category.LegacyCategory)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="template-name" class="form-label fw-semibold">Nome do template</label>
                        <input id="template-name" class="form-control" maxlength="120" />
                    </div>
                    <div class="col-md-4">
                        <label for="template-description" class="form-label fw-semibold">Descricao</label>
                        <input id="template-description" class="form-control" maxlength="500" />
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3 class="h6 fw-semibold mb-0">Itens do checklist</h3>
                    <button type="button" class="btn btn-sm btn-outline-primary" id="add-item-btn">
                        <i class="fas fa-plus"></i> Adicionar item
                    </button>
                </div>
                <div id="template-items" class="d-grid gap-2"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="save-template-btn">Salvar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="statusTemplateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-5">Confirmar alteracao de status</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <p id="status-message" class="mb-3"></p>
                <label for="status-reason" class="form-label fw-semibold">Motivo (opcional)</label>
                <textarea id="status-reason" class="form-control" rows="3" maxlength="300"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirm-status-btn">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    window.adminChecklistTemplatesConfig = {
        createUrl: "@createUrl",
        updateUrl: "@updateUrl",
        updateStatusUrl: "@updateStatusUrl"
    };
</script>
<script src="~/js/views/admin-checklist-templates/index.js" asp-append-version="true"></script>
}
