@model ConsertaPraMim.Web.Admin.Models.AdminUserDetailsViewModel
@{
    ViewData["Title"] = "Detalhes do Usuario";
    var user = Model.User;
}

<style>
    .details-card {
        border: 0;
        border-radius: 14px;
        box-shadow: 0 10px 22px rgba(15, 23, 42, .08);
    }

    .details-label {
        font-size: .75rem;
        text-transform: uppercase;
        letter-spacing: .05em;
        color: #64748b;
    }

    .details-value {
        font-size: 1rem;
        color: #0f172a;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h4 fw-bold mb-1">Detalhes do Usuario</h1>
        <p class="text-muted mb-0">Informacoes principais e historico resumido da conta.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (user == null)
{
    <div class="alert alert-secondary">Usuario nao encontrado.</div>
}
else
{
    var isActiveClass = user.IsActive ? "bg-success-subtle text-success-emphasis" : "bg-danger-subtle text-danger-emphasis";

    <div class="row g-3">
        <div class="col-12 col-lg-8">
            <div class="details-card card h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h2 class="h6 fw-semibold mb-0">@user.Name</h2>
                    <div class="d-flex gap-2">
                        <span class="badge bg-secondary">@user.Role</span>
                        <span class="badge @isActiveClass">@(user.IsActive ? "Ativo" : "Inativo")</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <div class="details-label mb-1">Email</div>
                            <div class="details-value">@user.Email</div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="details-label mb-1">Telefone</div>
                            <div class="details-value">@user.Phone</div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="details-label mb-1">Criado em</div>
                            <div class="details-value">@user.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="details-label mb-1">Ultima atualizacao</div>
                            <div class="details-value">
                                @(user.UpdatedAt.HasValue ? user.UpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss") : "-")
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="details-label mb-1">Historico resumido</div>
                            <ul class="mb-0 text-muted">
                                <li>Cadastro criado em @user.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</li>
                                <li>Status atual: @(user.IsActive ? "Ativo" : "Inativo")</li>
                                <li>Ultima alteracao registrada: @(user.UpdatedAt.HasValue ? user.UpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "sem alteracoes")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="details-card card h-100">
                <div class="card-header bg-white">
                    <h2 class="h6 fw-semibold mb-0">Perfil de Prestador</h2>
                </div>
                <div class="card-body">
                    @if (user.ProviderProfile == null)
                    {
                        <p class="text-muted mb-0">Este usuario nao possui perfil de prestador.</p>
                    }
                    else
                    {
                        <dl class="row mb-0">
                            <dt class="col-6 text-muted">Raio</dt>
                            <dd class="col-6">@user.ProviderProfile.RadiusKm km</dd>

                            <dt class="col-6 text-muted">CEP base</dt>
                            <dd class="col-6">@(user.ProviderProfile.BaseZipCode ?? "-")</dd>

                            <dt class="col-6 text-muted">Lat/Lng</dt>
                            <dd class="col-6">
                                @(user.ProviderProfile.BaseLatitude?.ToString("F6") ?? "-") /
                                @(user.ProviderProfile.BaseLongitude?.ToString("F6") ?? "-")
                            </dd>

                            <dt class="col-6 text-muted">Verificado</dt>
                            <dd class="col-6">@(user.ProviderProfile.IsVerified ? "Sim" : "Nao")</dd>

                            <dt class="col-6 text-muted">Avaliacao</dt>
                            <dd class="col-6">@user.ProviderProfile.Rating.ToString("F1") (@user.ProviderProfile.ReviewCount)</dd>

                            <dt class="col-12 text-muted">Categorias</dt>
                            <dd class="col-12">
                                @if (user.ProviderProfile.Categories.Any())
                                {
                                    @foreach (var category in user.ProviderProfile.Categories)
                                    {
                                        <span class="badge bg-light text-dark border me-1 mb-1">@category</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Nenhuma categoria cadastrada.</span>
                                }
                            </dd>
                        </dl>
                    }
                </div>
            </div>
        </div>
    </div>
}
