@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var csrfToken = Antiforgery.GetAndStoreTokens(Context).RequestToken ?? string.Empty;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConsertaPraMim Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body.admin-auth {
            background: #f4f6fb;
            margin: 0;
            overflow: hidden;
        }

        .admin-shell {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .admin-sidebar {
            width: 280px;
            min-width: 280px;
            background: #111827;
            color: #f9fafb;
            padding: 14px 12px;
            display: flex;
            flex-direction: column;
            gap: 12px;
            transition: width 0.2s ease, min-width 0.2s ease, padding 0.2s ease;
        }

        .admin-sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 10px;
            min-height: 44px;
        }

        .admin-brand {
            font-weight: 700;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
            min-width: 0;
            margin: 0;
        }

        .admin-brand span {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .admin-sidebar-toggle {
            border: 0;
            background: rgba(255, 255, 255, 0.08);
            color: #e5e7eb;
            width: 30px;
            height: 30px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .admin-sidebar-toggle:hover {
            background: rgba(255, 255, 255, 0.16);
            color: #fff;
        }

        .admin-nav {
            display: flex;
            flex-direction: column;
            gap: 4px;
            flex: 1;
            min-height: 0;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 4px;
        }

        .admin-nav::-webkit-scrollbar {
            width: 8px;
        }

        .admin-nav::-webkit-scrollbar-thumb {
            background: rgba(148, 163, 184, 0.45);
            border-radius: 999px;
        }

        .admin-nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #e5e7eb;
            text-decoration: none;
            border-radius: 8px;
            padding: 10px 12px;
            margin-bottom: 0;
            position: relative;
        }

        .admin-nav-link > i {
            width: 18px;
            text-align: center;
            flex-shrink: 0;
        }

        .admin-nav-link > span {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .admin-nav-link:hover,
        .admin-nav-link.active {
            background: #1f2937;
            color: #fff;
        }

        .admin-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
            height: 100vh;
            overflow: hidden;
        }

        .admin-topbar {
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
            padding: 14px 18px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .admin-content {
            padding: 20px;
            flex: 1;
            min-height: 0;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .admin-shell.sidebar-collapsed .admin-sidebar {
            width: 84px;
            min-width: 84px;
            padding-left: 10px;
            padding-right: 10px;
        }

        .admin-shell.sidebar-collapsed .admin-brand span,
        .admin-shell.sidebar-collapsed .admin-nav-link > span {
            display: none;
        }

        .admin-shell.sidebar-collapsed .admin-brand {
            justify-content: center;
        }

        .admin-shell.sidebar-collapsed .admin-sidebar-toggle i {
            transform: rotate(180deg);
        }

        .admin-shell.sidebar-collapsed .admin-nav-link {
            justify-content: center;
            padding-left: 0;
            padding-right: 0;
        }

        .admin-shell.sidebar-collapsed .admin-nav-link::after {
            content: attr(data-nav-label);
            position: absolute;
            left: calc(100% + 10px);
            top: 50%;
            transform: translateY(-50%) translateX(-4px);
            background: #111827;
            color: #fff;
            padding: 6px 10px;
            border-radius: 8px;
            border: 1px solid rgba(148, 163, 184, 0.35);
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.25);
            white-space: nowrap;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.14s ease, transform 0.14s ease;
            z-index: 1080;
            font-size: 12px;
            font-weight: 600;
        }

        .admin-shell.sidebar-collapsed .admin-nav-link:hover::after {
            opacity: 1;
            transform: translateY(-50%) translateX(0);
        }

        @@media (max-width: 992px) {
            body.admin-auth {
                overflow: auto;
            }

            .admin-shell {
                display: block;
                height: auto;
                overflow: visible;
            }

            .admin-sidebar {
                width: 100%;
                min-width: 100%;
                height: auto;
                max-height: none;
            }

            .admin-nav {
                max-height: 45vh;
            }

            .admin-main {
                height: auto;
                overflow: visible;
            }

            .admin-content {
                overflow: visible;
            }

            .admin-shell.sidebar-collapsed .admin-sidebar {
                width: 100%;
                min-width: 100%;
                padding-left: 12px;
                padding-right: 12px;
            }

            .admin-shell.sidebar-collapsed .admin-brand span,
            .admin-shell.sidebar-collapsed .admin-nav-link > span {
                display: inline;
            }

            .admin-shell.sidebar-collapsed .admin-nav-link {
                justify-content: flex-start;
                padding-left: 12px;
                padding-right: 12px;
            }

            .admin-shell.sidebar-collapsed .admin-nav-link::after {
                display: none;
            }
        }
    </style>
</head>
