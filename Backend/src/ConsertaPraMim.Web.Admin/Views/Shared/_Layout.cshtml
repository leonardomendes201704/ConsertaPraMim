                min-width: 100%;
                height: auto;
                max-height: none;
            }

            .admin-nav {
                max-height: 45vh;
            }

            .admin-main {
                height: auto;
                overflow: visible;
            }

            .admin-content {
                overflow: visible;
            }

            .admin-shell.sidebar-collapsed .admin-sidebar {
                width: 100%;
                min-width: 100%;
                padding-left: 12px;
                padding-right: 12px;
            }

            .admin-shell.sidebar-collapsed .admin-brand span,
            .admin-shell.sidebar-collapsed .admin-nav-link > span {
                display: inline;
            }

            .admin-shell.sidebar-collapsed .admin-nav-link {
                justify-content: flex-start;
                padding-left: 12px;
                padding-right: 12px;
            }

            .admin-shell.sidebar-collapsed .admin-nav-link::after {
                display: none;
            }
        }
    </style>
</head>
