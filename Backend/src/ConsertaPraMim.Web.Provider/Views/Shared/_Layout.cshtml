    {
        <div class="provider-shell" id="providerShell">
            <aside class="provider-sidebar">
                <div class="provider-sidebar-header">
                    <div class="provider-brand">
                        <i class="fas fa-tools"></i>
                        <span>ConsertaPraMim</span>
                    </div>
                    <button type="button" class="provider-sidebar-toggle" id="sidebarToggle" aria-label="Alternar menu lateral" title="Recolher menu">
                        <i class="fas fa-angles-left"></i>
                    </button>
                </div>

                <nav class="provider-nav">
                    <a asp-controller="Home" asp-action="Index" class="provider-nav-link @(currentController.Equals("Home", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                    <a asp-controller="ServiceRequests" asp-action="Index" class="provider-nav-link @(currentController.Equals("ServiceRequests", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-search"></i>
                        <span>Novos Pedidos</span>
                    </a>
                    <a asp-controller="Proposals" asp-action="Index" class="provider-nav-link @(currentController.Equals("Proposals", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-paper-plane"></i>
                        <span>Minhas Propostas</span>
                    </a>
                    <a asp-controller="ServiceRequests" asp-action="Agenda" class="provider-nav-link @(currentController.Equals("ServiceRequests", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("Agenda", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-calendar-check"></i>
                        <span>Minha Agenda</span>
                    </a>
                    <a asp-controller="Availability" asp-action="Index" class="provider-nav-link @(currentController.Equals("Availability", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-clock"></i>
                        <span>Disponibilidade e Bloqueios</span>
                    </a>
                    <a asp-controller="Chats" asp-action="Index" class="provider-nav-link @(currentController.Equals("Chats", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-comments"></i>
                        <span>Chats/Conversas</span>
                    </a>
                    <a asp-controller="SupportTickets" asp-action="Index" class="provider-nav-link @(currentController.Equals("SupportTickets", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-headset"></i>
                        <span>Suporte</span>
                    </a>
                    <a asp-controller="Gallery" asp-action="Index" class="provider-nav-link @(currentController.Equals("Gallery", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-photo-film"></i>
                        <span>Galeria de Fotos e Videos</span>
                    </a>
                    <a asp-controller="ProviderCredits" asp-action="Index" class="provider-nav-link @(currentController.Equals("ProviderCredits", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-wallet"></i>
                        <span>Carteira de Creditos</span>
                    </a>
                    <a asp-controller="ServiceRequests" asp-action="History" class="provider-nav-link @(currentController.Equals("ServiceRequests", StringComparison.OrdinalIgnoreCase) && currentAction.Equals("History", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-history"></i>
                        <span>Historico</span>
                    </a>
                    <a asp-controller="Profile" asp-action="Index" class="provider-nav-link @(currentController.Equals("Profile", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                        <i class="fas fa-user-cog"></i>
                        <span>Configuracoes</span>
                    </a>

                    @if (User.IsInRole("Admin") && legacyAdminEnabled)
                    {
                        <div class="provider-nav-section">
                            <span>Admin</span>
                        </div>
                        <a asp-controller="Admin" asp-action="Index" class="provider-nav-link @(currentController.Equals("Admin", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                            <i class="fas fa-shield-alt"></i>
                            <span>Administracao</span>
                        </a>
                    }
                </nav>
            </aside>

            <main class="provider-main">
                <header class="provider-topbar">
                    <div class="fw-semibold">Portal do Prestador</div>
                    <div class="provider-topbar-right">
                        @if (User.IsInRole("Provider"))
                        {
                            <div class="quick-status-wrap">
                                <span class="quick-status-label">Status operacional</span>
                                <select id="quickOperationalStatus" class="form-select form-select-sm quick-status-select">
                                    <option value="0">Ausente</option>
                                    <option value="1">Online</option>
                                    <option value="2">Em Atendimento</option>
                                </select>
                            </div>
                        }
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                <span class="me-2 d-none d-md-block">@User.Identity?.Name</span>
                                <img src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=0D6EFD&color=fff" class="nav-user-img" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user me-2"></i>Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Sair
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </header>

                <div class="provider-content">
                    @RenderBody()
                </div>
            </main>
        </div>
    }
    else
    {
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1"><i class="fas fa-tools me-2 text-primary"></i>ConsertaPraMim</span>

                    <div class="ms-auto d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="dropdown">
                                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                    <span class="me-2 d-none d-md-block">@User.Identity.Name</span>
                                    <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=0D6EFD&color=fff" class="nav-user-img" />
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user me-2"></i>Perfil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">Login</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Cadastrar-se</a>
                        }
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    }

    @if (hasAuthenticatedShell)
    {
        <div id="global-chat-dock" class="global-chat-dock"></div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
