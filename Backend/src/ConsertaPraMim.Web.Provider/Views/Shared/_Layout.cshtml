    window.providerLayoutConfig = {
        csrfToken: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(csrfToken)),
        isRealtimeEnabled: @((User.Identity.IsAuthenticated && !isOnboardingPage).ToString().ToLowerInvariant()),
        apiBaseUrl: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(browserApiBaseUrl)),
        hubAccessToken: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(apiToken)),
        isProviderRole: @User.IsInRole("Provider").ToString().ToLowerInvariant(),
        currentUserId: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(currentUserId)),
        chatAccessToken: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(apiToken))
    };
</script>
