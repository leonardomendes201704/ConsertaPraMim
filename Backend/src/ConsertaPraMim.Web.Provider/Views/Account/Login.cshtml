@{
    Layout = "_Layout";
    ViewData["Title"] = "Login - Prestador";
}

<div class="auth-container auth-login-page">
    <div class="container d-flex justify-content-center">
        <div class="card auth-card p-4 shadow-lg border-0">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-tools fa-3x text-primary mb-3"></i>
                    <h2 class="fw-bold">Acesso ao Portal</h2>
                    <p class="text-muted">Area do Prestador de Servico</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger border-0 shadow-sm mb-4">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label">E-mail</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="fas fa-envelope text-muted"></i></span>
                            <input type="email" name="email" class="form-control border-light bg-light" placeholder="exemplo@email.com" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Senha</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="fas fa-lock text-muted"></i></span>
                            <input type="password" name="password" class="form-control border-light bg-light" placeholder="Sua senha segura" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm">Entrar Agora</button>

                    <div class="text-center mt-4">
                        <p class="text-muted mb-0">Nao tem uma conta? <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Cadastre-se aqui</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html,
        body {
            height: 100%;
            overflow: hidden;
        }

        .auth-login-page {
            min-height: 100vh;
            background: linear-gradient(135deg, #0d6efd 0%, #003d99 100%);
            display: flex;
            align-items: center;
        }

        .auth-login-page > .container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-card {
            max-width: 420px;
            width: 100%;
        }
    </style>
}
