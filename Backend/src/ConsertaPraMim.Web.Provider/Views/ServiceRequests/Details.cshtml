                <div class="fw-semibold mb-2">
                    <i class="fas fa-receipt text-primary me-2"></i>Memoria de calculo financeiro
                </div>
                <div class="d-grid gap-2">
                    ${entries.join("")}
                </div>
            </div>`;
    })();
