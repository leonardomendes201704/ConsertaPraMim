@model IEnumerable<ConsertaPraMim.Application.DTOs.ServiceRequestDto>
@{
    ViewData["Title"] = "Minha Agenda";
    var pendingConfirmations = (ViewBag.PendingConfirmationAppointments as IEnumerable<ConsertaPraMim.Web.Provider.Models.PendingAppointmentConfirmationViewModel>)
        ?.ToList()
        ?? new List<ConsertaPraMim.Web.Provider.Models.PendingAppointmentConfirmationViewModel>();
    var providerAppointments = (ViewBag.ProviderAppointments as IReadOnlyList<ConsertaPraMim.Application.DTOs.ServiceAppointmentDto>)
        ?.ToList()
        ?? new List<ConsertaPraMim.Application.DTOs.ServiceAppointmentDto>();
    var appointmentLookup = (ViewBag.AppointmentLookup as IReadOnlyDictionary<Guid, ConsertaPraMim.Application.DTOs.ServiceAppointmentDto>)
        ?? new Dictionary<Guid, ConsertaPraMim.Application.DTOs.ServiceAppointmentDto>();
    var requestLookup = Model.ToDictionary(item => item.Id, item => item);
    var calendarAppointments = providerAppointments
        .Where(appointment =>
            !string.Equals(appointment.Status, "RejectedByProvider", StringComparison.OrdinalIgnoreCase) &&
            !string.Equals(appointment.Status, "CancelledByClient", StringComparison.OrdinalIgnoreCase) &&
            !string.Equals(appointment.Status, "CancelledByProvider", StringComparison.OrdinalIgnoreCase) &&
            !string.Equals(appointment.Status, "ExpiredWithoutProviderAction", StringComparison.OrdinalIgnoreCase))
        .OrderBy(appointment => appointment.WindowStartUtc)
        .ToList();
    var appointmentsByDate = calendarAppointments
        .GroupBy(appointment => appointment.WindowStartUtc.ToLocalTime().Date)
        .ToDictionary(group => group.Key, group => group.ToList());
    var todayLocal = DateTime.Today;
    var weekStartLocal = todayLocal.AddDays(-(((int)todayLocal.DayOfWeek + 6) % 7));
    var weekDays = Enumerable.Range(0, 7).Select(offset => weekStartLocal.AddDays(offset)).ToList();
    var monthStart = new DateTime(todayLocal.Year, todayLocal.Month, 1);
    var monthLeadDays = ((int)monthStart.DayOfWeek + 6) % 7;
    var monthGridStart = monthStart.AddDays(-monthLeadDays);
    var monthDays = Enumerable.Range(0, 42).Select(offset => monthGridStart.AddDays(offset)).ToList();
    Func<DateTime, string> dayShortLabel = date => date.DayOfWeek switch
    {
        DayOfWeek.Monday => "Seg",
        DayOfWeek.Tuesday => "Ter",
        DayOfWeek.Wednesday => "Qua",
        DayOfWeek.Thursday => "Qui",
        DayOfWeek.Friday => "Sex",
        DayOfWeek.Saturday => "Sab",
        DayOfWeek.Sunday => "Dom",
        _ => date.DayOfWeek.ToString()
    };
    Func<int, string> monthLabel = month => month switch
    {
        1 => "Janeiro",
        2 => "Fevereiro",
        3 => "Marco",
        4 => "Abril",
        5 => "Maio",
        6 => "Junho",
        7 => "Julho",
        8 => "Agosto",
        9 => "Setembro",
        10 => "Outubro",
        11 => "Novembro",
        12 => "Dezembro",
        _ => month.ToString()
    };
    Func<string, string> appointmentStatusClass = status => status switch
    {
        "PendingProviderConfirmation" => "bg-warning-subtle text-warning-emphasis",
        "Confirmed" => "bg-success-subtle text-success-emphasis",
        "Arrived" => "bg-info-subtle text-info-emphasis",
        "InProgress" => "bg-primary-subtle text-primary-emphasis",
        "RescheduleRequestedByClient" => "bg-info-subtle text-info-emphasis",
        "RescheduleRequestedByProvider" => "bg-primary-subtle text-primary-emphasis",
        "RescheduleConfirmed" => "bg-primary-subtle text-primary-emphasis",
        "Completed" => "bg-success-subtle text-success-emphasis",
        _ => "bg-light text-muted"
    };
    Func<string?, string> appointmentStatusText = status => status switch
    {
        "PendingProviderConfirmation" => "Aguardando confirmacao",
        "Confirmed" => "Confirmado",
        "Arrived" => "Chegada registrada",
        "InProgress" => "Em atendimento",
        "RescheduleRequestedByClient" => "Cliente pediu reagendamento",
        "RescheduleRequestedByProvider" => "Prestador pediu reagendamento",
        "RescheduleConfirmed" => "Reagendamento confirmado",
        "RejectedByProvider" => "Recusado pelo prestador",
        "CancelledByClient" => "Cancelado pelo cliente",
        "CancelledByProvider" => "Cancelado pelo prestador",
        "ExpiredWithoutProviderAction" => "Expirado sem confirmacao",
        "Completed" => "Concluido",
        _ => string.IsNullOrWhiteSpace(status) ? "Sem status" : status
    };
    Func<string?, string> operationalStatusText = status => status switch
    {
        "OnTheWay" => "A caminho",
        "OnSite" => "No local",
        "InService" => "Em atendimento",
        "WaitingParts" => "Aguardando peca",
        "Completed" => "Concluido",
        _ => string.IsNullOrWhiteSpace(status) ? "Sem status" : status
    };
    Func<string?, string> historyActorLabel = role => role switch
    {
        "Provider" => "Prestador",
        "Client" => "Cliente",
        "Admin" => "Admin",
        "System" => "Sistema",
        _ => string.IsNullOrWhiteSpace(role) ? "Sistema" : role
    };
    Func<string?, (string Label, string CssClass, string IconClass)> riskMeta = level => (level ?? string.Empty).Trim().ToLowerInvariant() switch
    {
        "high" => ("Risco alto", "bg-danger-subtle text-danger-emphasis", "fa-triangle-exclamation"),
        "medium" => ("Risco medio", "bg-warning-subtle text-warning-emphasis", "fa-circle-exclamation"),
        "low" => ("Risco baixo", "bg-success-subtle text-success-emphasis", "fa-shield-alt"),
        _ => ("Risco nao avaliado", "bg-light text-muted", "fa-shield")
    };
    var agendaOpenRequestId = (ViewBag.AgendaOpenRequestId as string ?? string.Empty).Trim();
    var agendaModalErrorRequestId = (ViewBag.AgendaModalErrorRequestId as string ?? string.Empty).Trim();
    var agendaModalErrorMessage = (ViewBag.AgendaModalErrorMessage as string ?? string.Empty).Trim();
    double? providerBaseLatitude = null;
    double? providerBaseLongitude = null;

    if (ViewBag.ProviderBaseLatitude != null)
    {
        var providerLatitudeText = Convert.ToString(
            ViewBag.ProviderBaseLatitude,
            System.Globalization.CultureInfo.InvariantCulture);
        if (!string.IsNullOrWhiteSpace(providerLatitudeText))
        {
            if (double.TryParse(
                providerLatitudeText,
                System.Globalization.NumberStyles.Any,
                System.Globalization.CultureInfo.InvariantCulture,
                out double parsedProviderLatitude))
            {
                providerBaseLatitude = parsedProviderLatitude;
            }
        }
    }

    if (ViewBag.ProviderBaseLongitude != null)
    {
        var providerLongitudeText = Convert.ToString(
            ViewBag.ProviderBaseLongitude,
            System.Globalization.CultureInfo.InvariantCulture);
        if (!string.IsNullOrWhiteSpace(providerLongitudeText))
        {
            if (double.TryParse(
                providerLongitudeText,
                System.Globalization.NumberStyles.Any,
                System.Globalization.CultureInfo.InvariantCulture,
                out double parsedProviderLongitude))
            {
                providerBaseLongitude = parsedProviderLongitude;
            }
        }
    }
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 fw-bold">Minha Agenda</h1>
            <p class="text-muted">ServiÃ§os confirmados e agendados com os clientes.</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4">
            <i class="fas fa-triangle-exclamation me-2"></i>@TempData["Error"]
        </div>
    }

    <div id="agendaRealtimeAlert" class="alert alert-info border-0 shadow-sm mb-4 d-none" role="status" aria-live="polite">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>
                <i class="fas fa-bolt me-2"></i>
                Novo agendamento pendente detectado. Atualizando agenda em
                <strong id="agendaRealtimeCountdown">3</strong>s...
            </div>
            <button type="button" class="btn btn-sm btn-outline-primary rounded-pill px-3" id="agendaRealtimeRefreshNow">
                Atualizar agora
            </button>
        </div>
    </div>

    @if (pendingConfirmations.Any())
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-warning-subtle border-0 py-3 px-4 d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0 text-warning-emphasis">
                    <i class="fas fa-hourglass-half me-2"></i>
                    Aguardando confirmacao (@pendingConfirmations.Count)
                </h5>
                <span class="badge bg-warning text-dark px-3 py-2">Acao necessaria</span>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    @foreach (var pending in pendingConfirmations)
                    {
                        var pendingRisk = riskMeta(pending.NoShowRiskLevel);
                        var hasSla = pending.ExpiresAtUtc.HasValue;
                        var nowUtc = DateTime.UtcNow;
                        var slaRemaining = hasSla ? pending.ExpiresAtUtc!.Value - nowUtc : TimeSpan.Zero;
                        var slaUrgency = !hasSla
                            ? "bg-light text-muted"
                            : slaRemaining <= TimeSpan.Zero
                                ? "bg-danger-subtle text-danger-emphasis"
                                : slaRemaining <= TimeSpan.FromHours(2)
                                    ? "bg-warning-subtle text-warning-emphasis"
                                    : "bg-success-subtle text-success-emphasis";
                        var slaLabel = !hasSla
                            ? "Sem SLA"
                            : slaRemaining <= TimeSpan.Zero
                                ? "SLA expirado"
                                : slaRemaining < TimeSpan.FromHours(1)
                                    ? $"SLA restante: {(int)Math.Ceiling(slaRemaining.TotalMinutes)} min"
                                    : $"SLA restante: {Math.Floor(slaRemaining.TotalHours)}h {slaRemaining.Minutes}m";
                        <div class="col-lg-6">
                            <div class="border rounded-3 p-3 h-100 bg-light-subtle">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="badge bg-primary-subtle text-primary">@pending.Category</span>
                                    <small class="text-muted">#@pending.ServiceRequestId.ToString().Substring(0, 8)</small>
                                </div>
                                <div class="fw-semibold mb-1">@pending.Description</div>
                                <div class="small text-muted mb-2">
                                    <i class="fas fa-user me-1"></i>@(string.IsNullOrWhiteSpace(pending.ClientName) ? "Cliente" : pending.ClientName)
                                </div>
                                <div class="small text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-1 text-danger"></i>@pending.Street, @pending.City
                                </div>
                                @if (pending.Latitude.HasValue && pending.Longitude.HasValue)
                                {
                                    <div class="small text-muted mb-2">
                                        <i class="fas fa-route me-1 text-primary"></i>
                                        <span data-agenda-distance-cell="1"
                                              data-request-lat="@pending.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                              data-request-lng="@pending.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                              data-estimated-distance="@(pending.DistanceKm?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? string.Empty)"
                                              data-distance-prefix="Distancia da base:">
                                            @(pending.DistanceKm.HasValue ? $"Distancia da base: {pending.DistanceKm.Value.ToString("N1")} km (estimada)" : "Calculando distancia da base...")
                                        </span>
                                    </div>
                                }
                                else if (pending.DistanceKm.HasValue)
                                {
                                    <div class="small text-muted mb-2">
                                        <i class="fas fa-route me-1 text-primary"></i>
                                        Distancia da base: @pending.DistanceKm.Value.ToString("N1") km (estimada)
                                    </div>
                                }
                                <div class="small fw-semibold mb-3">
                                    <i class="fas fa-calendar-check me-1 text-primary"></i>
                                    @pending.WindowStartUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    -
                                    @pending.WindowEndUtc.ToLocalTime().ToString("HH:mm")
                                </div>
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <span class="badge rounded-pill @pendingRisk.CssClass">
                                        <i class="fas @pendingRisk.IconClass me-1"></i>@pendingRisk.Label
                                    </span>
                                    @if (pending.NoShowRiskCalculatedAtUtc.HasValue)
                                    {
                                        <span class="badge rounded-pill bg-light text-muted">
                                            Atualizado: @pending.NoShowRiskCalculatedAtUtc.Value.ToLocalTime().ToString("dd/MM HH:mm")
                                        </span>
                                    }
                                </div>
                                <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
                                    <span class="badge rounded-pill @slaUrgency">@slaLabel</span>
                                    @if (hasSla)
                                    {
                                        <span class="badge rounded-pill bg-light text-muted">
                                            Limite: @pending.ExpiresAtUtc!.Value.ToLocalTime().ToString("dd/MM HH:mm")
                                        </span>
                                    }
                                </div>
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <form asp-action="ConfirmAppointment" method="post">
                                        <input type="hidden" name="appointmentId" value="@pending.AppointmentId" />
                                        <input type="hidden" name="requestId" value="@pending.ServiceRequestId" />
                                        <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">
                                            <i class="fas fa-check me-1"></i>Confirmar
                                        </button>
                                    </form>
                                    <form asp-action="RejectAppointment" method="post" class="d-flex align-items-center gap-2">
                                        <input type="hidden" name="appointmentId" value="@pending.AppointmentId" />
                                        <input type="hidden" name="requestId" value="@pending.ServiceRequestId" />
                                        <input type="text"
                                               name="reason"
                                               maxlength="180"
                                               class="form-control form-control-sm"
                                               style="min-width: 170px;"
                                               placeholder="Motivo da recusa"
                                               required />
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                            <i class="fas fa-times me-1"></i>Recusar
                                        </button>
                                    </form>
                                </div>
                                <form asp-action="RequestAppointmentReschedule" method="post" class="row g-2 align-items-end">
                                    <input type="hidden" name="appointmentId" value="@pending.AppointmentId" />
                                    <input type="hidden" name="requestId" value="@pending.ServiceRequestId" />
                                    <input type="hidden" name="returnToAgenda" value="true" />
                                    <div class="col-12 col-md-4">
                                        <label class="form-label small mb-1">Nova data/hora inicio</label>
                                        <input type="datetime-local" name="proposedStartLocal" class="form-control form-control-sm" required />
                                    </div>
                                    <div class="col-12 col-md-4">
                                        <label class="form-label small mb-1">Nova data/hora fim</label>
                                        <input type="datetime-local" name="proposedEndLocal" class="form-control form-control-sm" required />
                                    </div>
                                    <div class="col-12 col-md-4">
                                        <label class="form-label small mb-1">Motivo</label>
                                        <input type="text" name="reason" maxlength="180" class="form-control form-control-sm" placeholder="Ex.: conflito de agenda" required />
                                    </div>
                                    <div class="col-12 d-flex flex-wrap gap-2">
                                        <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            <i class="fas fa-clock me-1"></i>Propor novo horario
                                        </button>
                                        <a asp-action="Details" asp-route-id="@pending.ServiceRequestId" class="btn btn-sm btn-warning rounded-pill px-3">
                                            Revisar detalhes
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 py-3 px-4 d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>
                <h5 class="fw-bold mb-1">Calendario de atendimentos</h5>
                <p class="text-muted small mb-0">
                    Semana atual e visao mensal de @monthLabel(monthStart.Month) de @monthStart.Year.
                </p>
            </div>
            <div class="btn-group" role="group" aria-label="Alternar calendario">
                <button type="button"
                        class="btn btn-sm btn-primary rounded-start-pill px-3 js-calendar-toggle active"
                        data-calendar-target="week">
                    Semanal
                </button>
                <button type="button"
                        class="btn btn-sm btn-outline-primary rounded-end-pill px-3 js-calendar-toggle"
                        data-calendar-target="month">
                    Mensal
                </button>
            </div>
        </div>
        <div class="card-body p-4">
            <div id="providerCalendarWeek" class="agenda-calendar">
                <div class="agenda-calendar-grid agenda-week-grid">
                    @foreach (var day in weekDays)
                    {
                        var dayItems = appointmentsByDate.TryGetValue(day.Date, out var values)
                            ? values
                            : new List<ConsertaPraMim.Application.DTOs.ServiceAppointmentDto>();
                        <div class="agenda-day-cell @(day.Date == todayLocal ? "today" : string.Empty)">
                            <div class="agenda-day-header">
                                <span class="agenda-day-name">@dayShortLabel(day)</span>
                                <span class="agenda-day-date">@day.ToString("dd/MM")</span>
                            </div>
                            <div class="agenda-day-body">
                                @if (!dayItems.Any())
                                {
                                    <span class="agenda-empty">Sem atendimentos</span>
                                }
                                else
                                {
                                    @foreach (var appointment in dayItems.OrderBy(item => item.WindowStartUtc).Take(5))
                                    {
                                        var statusClass = appointmentStatusClass(appointment.Status ?? string.Empty);
                                        var requestExists = requestLookup.TryGetValue(appointment.ServiceRequestId, out var requestItem);
                                        var category = requestExists ? requestItem!.Category : "Servico";
                                        <a asp-action="Details"
                                           asp-route-id="@appointment.ServiceRequestId"
                                           class="agenda-event @statusClass js-open-appointment-modal"
                                           data-request-id="@appointment.ServiceRequestId"
                                           data-request-short="@appointment.ServiceRequestId.ToString().Substring(0,8)"
                                           data-appointment-category="@category"
                                           data-appointment-window="@($"{appointment.WindowStartUtc.ToLocalTime():dd/MM/yyyy HH:mm} - {appointment.WindowEndUtc.ToLocalTime():HH:mm}")">
                                            <span class="agenda-event-time">
                                                @appointment.WindowStartUtc.ToLocalTime().ToString("HH:mm")
                                                -
                                                @appointment.WindowEndUtc.ToLocalTime().ToString("HH:mm")
                                            </span>
                                            <span class="agenda-event-title">@category</span>
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div id="providerCalendarMonth" class="agenda-calendar d-none">
                <div class="agenda-calendar-grid agenda-month-grid">
                    @foreach (var day in monthDays)
                    {
                        var dayItems = appointmentsByDate.TryGetValue(day.Date, out var values)
                            ? values
                            : new List<ConsertaPraMim.Application.DTOs.ServiceAppointmentDto>();
                        var isCurrentMonth = day.Month == monthStart.Month;
                        <div class="agenda-day-cell month-cell @(day.Date == todayLocal ? "today" : string.Empty) @(!isCurrentMonth ? "outside-month" : string.Empty)">
                            <div class="agenda-day-header">
                                <span class="agenda-day-date">@day.Day</span>
                                <span class="agenda-day-name">@dayShortLabel(day)</span>
                            </div>
                            <div class="agenda-day-body">
                                @if (!dayItems.Any())
                                {
                                    <span class="agenda-empty">-</span>
                                }
                                else
                                {
                                    @foreach (var appointment in dayItems.OrderBy(item => item.WindowStartUtc).Take(3))
                                    {
                                        var requestExists = requestLookup.TryGetValue(appointment.ServiceRequestId, out var requestItem);
                                        var category = requestExists ? requestItem!.Category : "Servico";
                                        var statusClass = appointmentStatusClass(appointment.Status ?? string.Empty);
                                        <a asp-action="Details"
                                           asp-route-id="@appointment.ServiceRequestId"
                                           class="agenda-event compact @statusClass js-open-appointment-modal"
                                           data-request-id="@appointment.ServiceRequestId"
                                           data-request-short="@appointment.ServiceRequestId.ToString().Substring(0,8)"
                                           data-appointment-category="@category"
                                           data-appointment-window="@($"{appointment.WindowStartUtc.ToLocalTime():dd/MM/yyyy HH:mm} - {appointment.WindowEndUtc.ToLocalTime():HH:mm}")">
                                            @appointment.WindowStartUtc.ToLocalTime().ToString("HH:mm")
                                            ·
                                            @category
                                        </a>
                                    }
                                    @if (dayItems.Count > 3)
                                    {
                                        <span class="agenda-more">+ @(dayItems.Count - 3) atendimentos</span>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

