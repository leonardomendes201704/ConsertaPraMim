                                    else if (item.DistanceKm.HasValue)
                                    {
                                        <div class="small text-muted agenda-client-distance">
                                            <i class="fas fa-route text-primary" aria-hidden="true"></i>
                                            <span>Distancia da base: @item.DistanceKm.Value.ToString("N1") km (estimada)</span>
                                        </div>
                                    }
                                </div>
                                <div class="agenda-client-schedule ms-auto" title="Dia do agendamento: @appointmentDayLabel">
                                    <div class="agenda-client-schedule-badge">
                                        <i class="bi bi-calendar agenda-client-schedule-icon" aria-hidden="true"></i>
                                        <span class="agenda-client-schedule-number">@appointmentDayNumber</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="agenda-request-description rounded-3 p-3 mb-3">
                            <a asp-action="Details"
                               asp-route-id="@item.Id"
                               class="agenda-request-open-details btn btn-sm btn-light"
                               title="Abrir detalhes do pedido"
                               aria-label="Abrir detalhes do pedido">
                                <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                            <div class="small text-uppercase fw-semibold text-muted mb-2">
                                Serviço / Pedido
                            </div>
                            <p class="mb-0 text-body-secondary">@item.Description</p>
                        </div>

                        @if (hasAppointmentInfo)
                        {
                            var appointmentRisk = riskMeta(appointmentInfo.NoShowRiskLevel);
                            var appointmentStatus = appointmentInfo.Status ?? string.Empty;
                            var appointmentStatusMeta = appointmentStatus switch
                            {
                                "PendingProviderConfirmation" => ("Aguardando confirmacao", "bg-warning-subtle text-warning-emphasis"),
                                "Confirmed" => ("Confirmado", "bg-success-subtle text-success-emphasis"),
                                "Arrived" => ("Chegada registrada", "bg-info-subtle text-info-emphasis"),
                                "InProgress" => ("Em atendimento", "bg-primary-subtle text-primary-emphasis"),
                                "RescheduleRequestedByClient" => ("Reagendamento solicitado pelo cliente", "bg-info-subtle text-info-emphasis"),
                                "RescheduleRequestedByProvider" => ("Reagendamento solicitado pelo prestador", "bg-primary-subtle text-primary-emphasis"),
                                "RescheduleConfirmed" => ("Reagendado confirmado", "bg-primary-subtle text-primary-emphasis"),
                                "RejectedByProvider" => ("Recusado pelo prestador", "bg-danger-subtle text-danger-emphasis"),
                                "CancelledByClient" => ("Cancelado pelo cliente", "bg-secondary-subtle text-secondary-emphasis"),
                                "CancelledByProvider" => ("Cancelado pelo prestador", "bg-secondary-subtle text-secondary-emphasis"),
                                "ExpiredWithoutProviderAction" => ("Expirado sem confirmacao", "bg-secondary-subtle text-secondary-emphasis"),
                                "Completed" => ("Concluido", "bg-success-subtle text-success-emphasis"),
                                _ => ("Em processamento", "bg-secondary-subtle text-secondary-emphasis")
                            };
                            var currentOperationalStatus = appointmentInfo.OperationalStatus
                                ?? (appointmentStatus switch
                                {
                                    "Arrived" => "OnSite",
                                    "InProgress" => "InService",
                                    "Completed" => "Completed",
                                    "Confirmed" => "OnTheWay",
                                    "RescheduleConfirmed" => "OnTheWay",
                                    _ => "OnTheWay"
                                });
                            var canMarkArrival =
                                string.Equals(appointmentStatus, "Confirmed", StringComparison.OrdinalIgnoreCase) ||
                                string.Equals(appointmentStatus, "RescheduleConfirmed", StringComparison.OrdinalIgnoreCase);
                            var canStartExecution = string.Equals(appointmentStatus, "Arrived", StringComparison.OrdinalIgnoreCase);

                            <div class="border border-primary-subtle bg-primary-subtle rounded-3 p-3 mb-3">
                                <div class="small text-primary-emphasis fw-semibold mb-1">
                                    <i class="fas fa-calendar-day me-1"></i>Dia e horario
                                </div>
                                <div class="small text-dark">
                                    @appointmentInfo.WindowStartUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    -
                                    @appointmentInfo.WindowEndUtc.ToLocalTime().ToString("HH:mm")
                                </div>
                                <div class="mt-2">
                                    <span class="badge rounded-pill js-appointment-status-badge @appointmentStatusMeta.Item2"
                                          data-status="@appointmentStatus">
                                        @appointmentStatusMeta.Item1
                                    </span>
                                </div>
                                <div class="mt-2 d-flex flex-wrap gap-2">
                                    <span class="badge rounded-pill @appointmentRisk.CssClass">
                                        <i class="fas @appointmentRisk.IconClass me-1"></i>@appointmentRisk.Label
                                    </span>
                                    @if (appointmentInfo.NoShowRiskCalculatedAtUtc.HasValue)
                                    {
                                        <span class="badge rounded-pill bg-light text-muted">
                                            Atualizado: @appointmentInfo.NoShowRiskCalculatedAtUtc.Value.ToLocalTime().ToString("dd/MM HH:mm")
                                        </span>
                                    }
                                </div>

                                @{
                                    var recentHistory = appointmentInfo.History
                                        .OrderByDescending(historyItem => historyItem.OccurredAtUtc)
                                        .Take(3)
                                        .ToList();
                                }
                                @if (recentHistory.Any())
                                {
                                    <div class="mt-3 border border-light-subtle rounded-3 p-2 bg-white">
                                        <div class="small fw-semibold text-muted mb-2 text-uppercase">
                                            <i class="fas fa-history me-1"></i>Historico recente
                                        </div>
                                        <div class="d-grid gap-2">
                                            @foreach (var historyItem in recentHistory)
                                            {
                                                var statusTransition = !string.IsNullOrWhiteSpace(historyItem.NewStatus)
                                                    ? string.IsNullOrWhiteSpace(historyItem.PreviousStatus)
                                                        ? appointmentStatusText(historyItem.NewStatus)
                                                        : $"{appointmentStatusText(historyItem.PreviousStatus)} -> {appointmentStatusText(historyItem.NewStatus)}"
                                                    : null;
                                                var operationalTransition = !string.IsNullOrWhiteSpace(historyItem.NewOperationalStatus)
                                                    ? string.IsNullOrWhiteSpace(historyItem.PreviousOperationalStatus)
                                                        ? operationalStatusText(historyItem.NewOperationalStatus)
                                                        : $"{operationalStatusText(historyItem.PreviousOperationalStatus)} -> {operationalStatusText(historyItem.NewOperationalStatus)}"
                                                    : null;
                                                <div class="border border-light-subtle rounded-2 p-2">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <span class="badge bg-light text-muted border border-light-subtle rounded-pill">
                                                            @historyActorLabel(historyItem.ActorRole)
                                                        </span>
                                                        <small class="text-muted">@historyItem.OccurredAtUtc.ToLocalTime().ToString("dd/MM HH:mm")</small>
                                                    </div>
                                                    @if (!string.IsNullOrWhiteSpace(statusTransition))
                                                    {
                                                        <div class="small text-muted">Status: @statusTransition</div>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(operationalTransition))
                                                    {
                                                        <div class="small text-muted">Operacional: @operationalTransition</div>
                                                    }
                                                    @if (!string.IsNullOrWhiteSpace(historyItem.Reason))
                                                    {
                                                        <div class="small">Motivo: @historyItem.Reason</div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                        @if (appointmentInfo.History.Count > recentHistory.Count)
                                        {
                                            <a asp-action="Details"
                                               asp-route-id="@item.Id"
                                               class="btn btn-link btn-sm p-0 mt-2 text-decoration-none">
                                                Ver historico completo
                                            </a>
                                        }
                                    </div>
                                }

                                @if (!string.Equals(appointmentStatus, "RejectedByProvider", StringComparison.OrdinalIgnoreCase) &&
                                     !string.Equals(appointmentStatus, "CancelledByClient", StringComparison.OrdinalIgnoreCase) &&
                                     !string.Equals(appointmentStatus, "CancelledByProvider", StringComparison.OrdinalIgnoreCase) &&
                                     !string.Equals(appointmentStatus, "ExpiredWithoutProviderAction", StringComparison.OrdinalIgnoreCase))
                                {
                                    <form asp-action="UpdateAppointmentOperationalStatus" method="post" class="mt-3">
                                        <input type="hidden" name="appointmentId" value="@appointmentInfo.Id" />
                                        <input type="hidden" name="requestId" value="@item.Id" />
                                        <input type="hidden" name="returnToAgenda" value="true" />
                                        <label class="form-label small text-uppercase fw-semibold mb-1">Status operacional</label>
                                        <select name="operationalStatus" class="form-select form-select-sm mb-2">
                                            <option value="OnTheWay" selected="@(string.Equals(currentOperationalStatus, "OnTheWay", StringComparison.OrdinalIgnoreCase))">A caminho</option>
                                            <option value="OnSite" selected="@(string.Equals(currentOperationalStatus, "OnSite", StringComparison.OrdinalIgnoreCase))">No local</option>
                                            <option value="InService" selected="@(string.Equals(currentOperationalStatus, "InService", StringComparison.OrdinalIgnoreCase))">Em atendimento</option>
                                            <option value="WaitingParts" selected="@(string.Equals(currentOperationalStatus, "WaitingParts", StringComparison.OrdinalIgnoreCase))">Aguardando peca</option>
                                            <option value="Completed" selected="@(string.Equals(currentOperationalStatus, "Completed", StringComparison.OrdinalIgnoreCase))">Concluido</option>
                                        </select>
                                        <input type="text"
                                               name="reason"
                                               maxlength="250"
                                               class="form-control form-control-sm mb-2"
                                               placeholder="Motivo (obrigatorio em aguardando peca)"
                                               value="@appointmentInfo.OperationalStatusReason" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill w-100">
                                            <i class="fas fa-route me-1"></i>Atualizar status operacional
                                        </button>
                                    </form>
                                }

                                @if (appointmentInfo.ArrivedAtUtc.HasValue)
                                {
                                    <div class="small text-muted mt-2">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        Chegada: @appointmentInfo.ArrivedAtUtc.Value.ToLocalTime().ToString("dd/MM HH:mm")
                                    </div>
                                }

                                @if (appointmentInfo.StartedAtUtc.HasValue)
                                {
                                    <div class="small text-muted mt-1">
                                        <i class="fas fa-play me-1"></i>
                                        Inicio: @appointmentInfo.StartedAtUtc.Value.ToLocalTime().ToString("dd/MM HH:mm")
                                    </div>
                                }

                                @if (canMarkArrival || canStartExecution)
                                {
                                    <div class="row g-2 mt-3">
                                        @if (canMarkArrival)
                                        {
                                            <div class="col-12">
                                                <form asp-action="MarkArrival" method="post" class="js-arrival-form d-grid">
                                                    <input type="hidden" name="appointmentId" value="@appointmentInfo.Id" />
                                                    <input type="hidden" name="requestId" value="@item.Id" />
                                                    <input type="hidden" name="returnToAgenda" value="true" />
                                                    <input type="hidden" name="latitude" value="" />
                                                    <input type="hidden" name="longitude" value="" />
                                                    <input type="hidden" name="accuracyMeters" value="" />
                                                    <input type="hidden" name="manualReason" value="" />
                                                    <button type="submit" class="btn btn-sm btn-primary rounded-pill">
                                                        <i class="fas fa-map-marker-alt me-1"></i>Registrar chegada
                                                    </button>
                                                </form>
                                            </div>
                                        }

                                        @if (canStartExecution)
                                        {
                                            <div class="col-12">
                                                <form asp-action="StartAppointment" method="post" class="d-grid">
                                                    <input type="hidden" name="appointmentId" value="@appointmentInfo.Id" />
                                                    <input type="hidden" name="requestId" value="@item.Id" />
                                                    <input type="hidden" name="returnToAgenda" value="true" />
                                                    <button type="submit" class="btn btn-sm btn-success rounded-pill">
                                                        <i class="fas fa-play me-1"></i>Iniciar atendimento
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white border-0 p-4 pt-0">
                        <div class="row g-2">
                            <div class="col-6">
                                <a href="https://wa.me/55@(item.ClientPhone?.Replace("(", "").Replace(")", "").Replace("-", "").Replace(" ", ""))" target="_blank" class="btn btn-outline-success w-100 rounded-pill">
                                    <i class="fab fa-whatsapp me-2"></i>Chamar
                                </a>
                            </div>
                            <div class="col-6">
                                @if (item.Status == "Scheduled" || item.Status == "InProgress")
                                {
                                    <form asp-action="Complete" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                                            <i class="fas fa-check me-1"></i> Finalizar
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100 rounded-pill" disabled>
                                        ConcluÃ­do
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="modal fade" id="agendaAppointmentModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable agenda-appointment-modal-dialog">
            <div class="modal-content border-0 shadow">
                <div class="modal-header border-0 pb-2">
                    <div class="d-flex align-items-center gap-3">
                        <span class="agenda-modal-category-icon" aria-hidden="true">
                            <i id="agendaAppointmentModalCategoryIcon" class="fas fa-screwdriver-wrench"></i>
                        </span>
                        <div>
                            <h5 class="modal-title fw-bold mb-0" id="agendaAppointmentModalTitle">Servico</h5>
                            <p class="text-muted small mb-0" id="agendaAppointmentModalSubtitle">Pedido</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body pt-2" id="agendaAppointmentModalBody">
                    <div class="alert alert-warning mb-0">
                        Nao foi possivel carregar os detalhes do agendamento.
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0 d-none" id="agendaAppointmentModalFooter"></div>
            </div>
        </div>
    </div>
</div>

