@model IEnumerable<ConsertaPraMim.Application.DTOs.ServiceRequestDto>
@{
    ViewData["Title"] = "Pedidos Disponiveis";

    double? providerBaseLatitude = null;
    double? providerBaseLongitude = null;

    if (ViewBag.ProviderBaseLatitude != null)
    {
        var providerLatitudeText = Convert.ToString(
            ViewBag.ProviderBaseLatitude,
            System.Globalization.CultureInfo.InvariantCulture);
        if (!string.IsNullOrWhiteSpace(providerLatitudeText))
        {
            if (double.TryParse(
                providerLatitudeText,
                System.Globalization.NumberStyles.Any,
                System.Globalization.CultureInfo.InvariantCulture,
                out double parsedProviderLatitude))
            {
                providerBaseLatitude = parsedProviderLatitude;
            }
        }
    }

    if (ViewBag.ProviderBaseLongitude != null)
    {
        var providerLongitudeText = Convert.ToString(
            ViewBag.ProviderBaseLongitude,
            System.Globalization.CultureInfo.InvariantCulture);
        if (!string.IsNullOrWhiteSpace(providerLongitudeText))
        {
            if (double.TryParse(
                providerLongitudeText,
                System.Globalization.NumberStyles.Any,
                System.Globalization.CultureInfo.InvariantCulture,
                out double parsedProviderLongitude))
            {
                providerBaseLongitude = parsedProviderLongitude;
            }
        }
    }
}

<style>
    .provider-requests-table {
        width: 100%;
        table-layout: auto;
    }

    .provider-requests-table .request-col-auto {
        width: 1%;
        white-space: nowrap;
    }

    .provider-requests-table .request-description-col {
        min-width: 320px;
        white-space: normal;
    }
</style>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex shadow-sm rounded-pill overflow-hidden bg-white border">
                <input type="text" name="searchTerm" class="form-control border-0 ps-4 py-2" placeholder="Buscar por descricao (ex: vazamento, pintura...)" value="@ViewBag.SearchTerm">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div class="col-md-6 text-end d-flex align-items-center justify-content-end">
            <div class="dropdown me-2">
                <button class="btn btn-light border rounded-pill px-3 shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-filter me-2 text-primary"></i>Filtros
                </button>
                <div class="dropdown-menu dropdown-menu-end p-3 shadow border-0" style="min-width: 250px;">
                    <h6 class="dropdown-header px-0 text-dark fw-bold mb-2">Ordenar Por</h6>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="sort" id="sort1" checked>
                        <label class="form-check-label small" for="sort1">Mais recentes</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="sort" id="sort2">
                        <label class="form-check-label small" for="sort2">Mais proximos</label>
                    </div>
                    <button class="btn btn-primary btn-sm w-100 rounded-pill">Aplicar</button>
                </div>
            </div>
            <button class="btn btn-outline-secondary border rounded-pill shadow-sm" onclick="location.href='@Url.Action("Index", new { searchTerm = "" })'">
                <i class="fas fa-times me-1"></i>Limpar
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 provider-requests-table">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="px-4 py-3 text-center request-col-auto">Publicado</th>
                            <th class="text-center request-col-auto">Categoria</th>
                            <th class="text-start request-description-col">Descricao</th>
                            <th class="text-center request-col-auto">Status</th>
                            <th class="text-center request-col-auto">Distancia</th>
                            <th class="text-center px-4 request-col-auto">Acao</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="py-4">
                                        <i class="fas fa-search fa-4x text-light mb-3"></i>
                                        <h5 class="text-muted">Nenhum pedido encontrado</h5>
                                        <p class="text-muted small">Tente aumentar seu raio de atendimento nas configuracoes.</p>
                                        <a asp-controller="Profile" asp-action="Index" class="btn btn-primary mt-2">Configurar Perfil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            var requestStatus = (item.Status ?? string.Empty).Trim();
                            var requestStatusLabel = requestStatus switch
                            {
                                "Created" => "Pedido criado",
                                "AwaitingProposals" => "Aguardando propostas",
                                "WithProposals" => "Com propostas",
                                "ProposalAccepted" => "Proposta aceita",
                                "Scheduled" => "Agendado",
                                "InProgress" => "Em atendimento",
                                "PendingClientCompletionAcceptance" => "Aguardando aceite",
                                "Completed" => "Concluido",
                                "Validated" => "Validado",
                                "Cancelled" => "Cancelado",
                                "Disputed" => "Em disputa",
                                "Closed" => "Encerrado",
                                _ => string.IsNullOrWhiteSpace(requestStatus) ? "Sem status" : requestStatus
                            };
                            var requestStatusClass = requestStatus switch
                            {
                                "Created" => "bg-success-subtle text-success border border-success-subtle",
                                "AwaitingProposals" => "bg-info-subtle text-info border border-info-subtle",
                                "WithProposals" => "bg-primary-subtle text-primary border border-primary-subtle",
                                "ProposalAccepted" => "bg-primary-subtle text-primary border border-primary-subtle",
                                "Scheduled" => "bg-warning-subtle text-warning border border-warning-subtle",
                                "InProgress" => "bg-primary-subtle text-primary border border-primary-subtle",
                                "PendingClientCompletionAcceptance" => "bg-warning-subtle text-warning border border-warning-subtle",
                                "Completed" => "bg-success-subtle text-success border border-success-subtle",
                                "Validated" => "bg-success-subtle text-success border border-success-subtle",
                                "Cancelled" => "bg-secondary-subtle text-secondary border border-secondary-subtle",
                                "Disputed" => "bg-danger-subtle text-danger border border-danger-subtle",
                                "Closed" => "bg-secondary-subtle text-secondary border border-secondary-subtle",
                                _ => "bg-secondary-subtle text-secondary border border-secondary-subtle"
                            };

                            <tr>
                                <td class="px-4 text-center request-col-auto">
                                    <span class="text-dark fw-medium">@item.CreatedAt.ToString("dd/MM/yyyy")</span><br />
                                    <small class="text-muted">@item.CreatedAt.ToString("HH:mm")</small>
                                </td>
                                <td class="text-center request-col-auto">
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3">
                                        @item.Category
                                    </span>
                                </td>
                                <td class="text-start request-description-col">
                                    <div class="fw-semibold text-dark">@item.Description</div>
                                    <small class="text-muted text-truncate d-inline-block" style="max-width: 300px;">ID: #@item.Id.ToString().Substring(0,8)</small>
                                </td>
                                <td class="text-center request-col-auto">
                                    <span class="badge @requestStatusClass rounded-pill px-3 py-2">@requestStatusLabel</span>
                                </td>
                                <td class="text-center request-col-auto">
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <span class="fw-semibold text-dark"
                                              data-distance-cell="provider-grid"
                                              data-request-lat="@item.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                              data-request-lng="@item.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                              data-estimated-distance="@(item.DistanceKm?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? string.Empty)">
                                            @(item.DistanceKm.HasValue ? $"{item.DistanceKm.Value.ToString("N1")} km" : "Calculando...")
                                        </span>
                                        @if (item.DistanceKm.HasValue)
                                        {
                                            <small class="text-muted d-block">estimada</small>
                                        }
                                    }
                                    else if (item.DistanceKm.HasValue)
                                    {
                                        <span class="fw-semibold text-dark">@item.DistanceKm.Value.ToString("N1") km</span>
                                        <small class="text-muted d-block">estimada</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">N/D</small>
                                    }
                                </td>
                                <td class="text-center px-4 request-col-auto">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary rounded-pill px-4 shadow-sm">Ver Pedido</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.providerRequestsIndexConfig = {
            providerBaseLat: @(providerBaseLatitude.HasValue ? providerBaseLatitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "null"),
            providerBaseLng: @(providerBaseLongitude.HasValue ? providerBaseLongitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "null"),
            routeUrl: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Url.Action("DrivingRoute", "ServiceRequests")))
        };
    </script>
    <script src="~/js/views/service-requests/index.js" asp-append-version="true"></script>
}
