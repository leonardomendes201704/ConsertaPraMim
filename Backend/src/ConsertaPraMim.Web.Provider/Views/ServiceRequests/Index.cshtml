@model IEnumerable<ConsertaPraMim.Application.DTOs.ServiceRequestDto>
@{
    ViewData["Title"] = "Pedidos Disponíveis";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex shadow-sm rounded-pill overflow-hidden bg-white border">
                <input type="text" name="searchTerm" class="form-control border-0 ps-4 py-2" placeholder="Buscar por descrição (ex: vazamento, pintura...)" value="@ViewBag.SearchTerm">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div class="col-md-6 text-end d-flex align-items-center justify-content-end">
            <div class="dropdown me-2">
                <button class="btn btn-light border rounded-pill px-3 shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-filter me-2 text-primary"></i>Filtros
                </button>
                <div class="dropdown-menu dropdown-menu-end p-3 shadow border-0" style="min-width: 250px;">
                    <h6 class="dropdown-header px-0 text-dark fw-bold mb-2">Ordenar Por</h6>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="sort" id="sort1" checked>
                        <label class="form-check-label small" for="sort1">Mais recentes</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="sort" id="sort2">
                        <label class="form-check-label small" for="sort2">Mais próximos</label>
                    </div>
                    <button class="btn btn-primary btn-sm w-100 rounded-pill">Aplicar</button>
                </div>
            </div>
            <button class="btn btn-outline-secondary border rounded-pill shadow-sm" onclick="location.href='@Url.Action("Index", new { searchTerm = "" })'">
                <i class="fas fa-times me-1"></i>Limpar
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="px-4 py-3">Publicado</th>
                            <th>Categoria</th>
                            <th>Descrição</th>
                            <th>Localização</th>
                            <th class="text-end px-4">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="py-4">
                                        <i class="fas fa-search fa-4x text-light mb-3"></i>
                                        <h5 class="text-muted">Nenhum pedido encontrado</h5>
                                        <p class="text-muted small">Tente aumentar seu raio de atendimento nas configurações.</p>
                                        <a asp-controller="Profile" asp-action="Index" class="btn btn-primary mt-2">Configurar Perfil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <span class="text-dark fw-medium">@item.CreatedAt.ToString("dd/MM/yyyy")</span><br/>
                                    <small class="text-muted">@item.CreatedAt.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3">
                                        @item.Category
                                    </span>
                                </td>
                                <td>
                                    <div class="fw-semibold text-dark">@item.Description</div>
                                    <small class="text-muted text-truncate d-inline-block" style="max-width: 300px;">ID: #@item.Id.ToString().Substring(0,8)</small>
                                </td>
                                <td>
                                    <i class="fas fa-map-marker-alt text-danger me-1"></i> @item.Street<br/>
                                    <small class="text-muted">@item.City</small>
                                </td>
                                <td class="text-end px-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary rounded-pill px-4 shadow-sm">Ver Pedido</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
