@using ConsertaPraMim.Domain.Enums
@using ConsertaPraMim.Web.Provider.Security
@using System.Globalization
@inject IConfiguration Configuration
@model ConsertaPraMim.Application.DTOs.UserProfileDto
@{
    ViewData["Title"] = "Meu Perfil";
    var categories = (Model.ProviderProfile?.PlanAllowedCategories?.Any() == true
        ? Model.ProviderProfile.PlanAllowedCategories
        : Enum.GetValues(typeof(ServiceCategory)).Cast<ServiceCategory>().ToList())
        .Distinct()
        .OrderBy(c => (int)c)
        .ToList();
    var planMaxRadius = Math.Max(1.0, Model.ProviderProfile?.PlanMaxRadiusKm ?? 50);
    var planMaxCategories = Model.ProviderProfile?.PlanMaxAllowedCategories ?? categories.Count;
    var apiBaseUrl = (Configuration["ApiBaseUrl"] ?? string.Empty).TrimEnd('/');
    var browserApiBaseUrl = apiBaseUrl;
    if (!string.IsNullOrWhiteSpace(apiBaseUrl) && Uri.TryCreate(apiBaseUrl, UriKind.Absolute, out var apiBaseUri))
    {
        var requestHost = (Context.Request.Host.Host ?? string.Empty).Trim();
        var isRequestFromLocalhost =
            requestHost.Equals("localhost", StringComparison.OrdinalIgnoreCase) ||
            requestHost.Equals("127.0.0.1", StringComparison.OrdinalIgnoreCase) ||
            requestHost.Equals("::1", StringComparison.OrdinalIgnoreCase);
        var isConfiguredLocalhost =
            apiBaseUri.Host.Equals("localhost", StringComparison.OrdinalIgnoreCase) ||
            apiBaseUri.Host.Equals("127.0.0.1", StringComparison.OrdinalIgnoreCase) ||
            apiBaseUri.Host.Equals("::1", StringComparison.OrdinalIgnoreCase);

        if (!isRequestFromLocalhost && isConfiguredLocalhost)
        {
            var browserApiBuilder = new UriBuilder(apiBaseUri)
            {
                Host = requestHost
            };
            browserApiBaseUrl = browserApiBuilder.Uri.GetLeftPart(UriPartial.Authority);
        }
    }
    var apiToken = User.FindFirst(WebProviderClaimTypes.ApiToken)?.Value ?? string.Empty;
    var currentOperationalStatus = Model.ProviderProfile?.OperationalStatus ?? ProviderOperationalStatus.Online;
}

<div class="container py-4" style="max-width: 900px;">
    <div class="mb-4">
        <h1 class="h3 fw-bold">Configuracoes do Perfil</h1>
        <p class="text-muted">Gerencie suas informacoes e area de atuacao.</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        </div>
    }

    @if (Model.ProviderProfile?.HasOperationalCompliancePending == true)
    {
        <div class="alert alert-warning border-0 shadow-sm mb-4">
            <i class="fas fa-triangle-exclamation me-2"></i>
            @(!string.IsNullOrWhiteSpace(Model.ProviderProfile.OperationalComplianceNotes)
                ? Model.ProviderProfile.OperationalComplianceNotes
                : "Seu perfil precisa ser ajustado para ficar dentro dos limites do plano atual.")
        </div>
    }

    <div class="row g-4">
        <!-- Personal Info -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 text-center">
                <div class="position-relative d-inline-block mx-auto mb-3">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "https://ui-avatars.com/api/?name=" + Model.Name + "&size=128&background=0D6EFD&color=fff" : Model.ProfilePictureUrl)" 
                         class="rounded-circle shadow-sm" style="width: 120px; height: 120px; object-fit: cover;">
                    <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" class="position-absolute bottom-0 end-0">
                        <label for="profileUpload" class="btn btn-primary btn-sm rounded-circle shadow" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; cursor: pointer;">
                            <i class="fas fa-camera"></i>
                        </label>
                        <input type="file" id="profileUpload" name="file" class="d-none" onchange="this.form.submit()">
                    </form>
                </div>
                <h5 class="fw-bold mb-1">@Model.Name</h5>
                <span class="badge bg-primary-subtle text-primary rounded-pill mb-3">Prestador Verificado</span>
                
                <div class="text-start mt-3 small">
                    <p class="mb-1 text-muted"><i class="fas fa-envelope me-2"></i> @Model.Email</p>
                    <p class="mb-1 text-muted"><i class="fas fa-phone me-2"></i> @Model.Phone</p>
                    @if (Model.ProviderProfile != null)
                    {
                        <p class="mb-1 text-muted"><i class="fas fa-crown me-2"></i> Plano: <strong>@Model.ProviderProfile.Plan</strong></p>
                        <p class="mb-0 text-muted"><i class="fas fa-clipboard-check me-2"></i> Onboarding: <strong>@Model.ProviderProfile.OnboardingStatus</strong></p>
                    }
                </div>

                <hr class="my-3">

                <div class="row text-center">
                    <div class="col">
                        <h6 class="fw-bold mb-0">@(Model.ProviderProfile?.Rating.ToString("F1") ?? "---")</h6>
                        <small class="text-muted small">Nota</small>
                    </div>
                    <div class="col border-start">
                        <h6 class="fw-bold mb-0">@(Model.ProviderProfile?.ReviewCount ?? 0)</h6>
                        <small class="text-muted small">Avaliacoes</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Settings Form -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4">
                <form asp-action="Update" method="post" id="providerProfileForm">
                    <h5 class="fw-bold mb-4">Area de Atuacao e Categorias</h5>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Status operacional</label>
                        <div class="d-flex flex-column flex-md-row gap-2">
                            <select class="form-select rounded-4 p-3 border-light-subtle bg-light"
                                    id="operationalStatus"
                                    name="operationalStatus">
                                @foreach (var status in Enum.GetValues(typeof(ProviderOperationalStatus)).Cast<ProviderOperationalStatus>())
                                {
                                    if (status == currentOperationalStatus)
                                    {
                                        <option value="@((int)status)" selected="selected">@status</option>
                                    }
                                    else
                                    {
                                        <option value="@((int)status)">@status</option>
                                    }
                                }
                            </select>
                            <button type="button" class="btn btn-outline-primary px-4 rounded-4" id="updateStatusBtn">
                                <i class="fas fa-broadcast-tower me-2"></i>Atualizar agora
                            </button>
                        </div>
                        <small class="text-muted d-block mt-2">Esse status aparece em tempo real para cliente e prestador.</small>
                        <div id="operationalStatusResult" class="small mt-2 text-muted"></div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label fw-semibold">CEP Base de Atendimento</label>
                        <div class="input-group">
                            <input type="text"
                                   id="baseZipCode"
                                   name="baseZipCode"
                                   class="form-control rounded-start-4 p-3 border-light-subtle bg-light"
                                   placeholder="00000-000"
                                   value="@(Model.ProviderProfile?.BaseZipCode ?? string.Empty)">
                            <button type="button" class="btn btn-outline-primary rounded-end-4 px-4" id="lookupZipBtn">
                                <i class="fas fa-search-location me-2"></i>Buscar
                            </button>
                        </div>
                        <small class="text-muted d-block mt-2">Esse CEP sera o centro do seu raio de atendimento.</small>
                        <div id="zipLookupResult" class="small mt-2 text-muted"></div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Latitude (auto)</label>
                            <input type="text"
                                   id="baseLatitudePreview"
                                   class="form-control rounded-4 p-3 border-light-subtle bg-light"
                                   readonly
                                   value="@(Model.ProviderProfile?.BaseLatitude?.ToString("F6", CultureInfo.InvariantCulture) ?? string.Empty)">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Longitude (auto)</label>
                            <input type="text"
                                   id="baseLongitudePreview"
                                   class="form-control rounded-4 p-3 border-light-subtle bg-light"
                                   readonly
                                   value="@(Model.ProviderProfile?.BaseLongitude?.ToString("F6", CultureInfo.InvariantCulture) ?? string.Empty)">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Raio de Atendimento (Km)</label>
                        <div class="d-flex align-items-center">
                            <input type="range" name="radiusKm" class="form-range me-3" min="1" max="@planMaxRadius.ToString("0", CultureInfo.InvariantCulture)" step="1" value="@(Model.ProviderProfile?.RadiusKm ?? 10)" id="radiusRange">
                            <span class="badge bg-primary p-2" id="radiusValue">@(Model.ProviderProfile?.RadiusKm ?? 10)km</span>
                        </div>
                        <small class="text-muted">Limite do plano: ate @planMaxRadius.ToString("0.#", CultureInfo.InvariantCulture) km.</small>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Suas Especialidades</label>
                        <small class="d-block text-muted mb-2">Limite do plano: ate @planMaxCategories categoria(s).</small>
                        <div class="row g-2">
                            @foreach (var cat in categories)
                            {
                                var isChecked = Model.ProviderProfile?.Categories?.Contains(cat) ?? false;
                                var categoryLabel = cat.ToPtBr();
                                <div class="col-6 col-md-4">
                                    <div class="form-check card p-2 border-light bg-light">
                                        <input class="form-check-input ms-0 me-2" type="checkbox" name="categories" value="@((int)cat)" id="cat_@((int)cat)" @(isChecked ? "checked" : "")>
                                        <label class="form-check-label small stretched-link cursor-pointer" for="cat_@((int)cat)">
                                            @categoryLabel
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary px-5 py-2 fw-bold shadow-sm">Salvar Alteracoes</button>
                    </div>
                </form>
            </div>

            <div class="card border-0 shadow-sm p-4 mt-4">
                <h5 class="fw-bold mb-4">Avaliacoes Recentes</h5>
                @{
                    var reviews = ViewBag.Reviews as IEnumerable<ConsertaPraMim.Application.DTOs.ReviewDto>;
                }

                @if (reviews == null || !reviews.Any())
                {
                    <p class="text-muted small">Nenhuma avaliacao recebida ainda.</p>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var review in reviews.Take(5))
                        {
                            <div class="list-group-item px-0 py-3 border-light">
                                <div class="d-flex justify-content-between mb-1">
                                    <div class="text-warning small">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= review.Rating ? "" : "text-secondary opacity-25")"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("d")</small>
                                </div>
                                <p class="mb-0 small text-dark">@review.Comment</p>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.providerProfileIndexConfig = {
            resolveZipUrl: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Url.Action("ResolveZip", "Profile"))),
            statusEndpoint: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(string.IsNullOrWhiteSpace(browserApiBaseUrl) ? "/api/profile/provider/status" : $"{browserApiBaseUrl}/api/profile/provider/status")),
            statusToken: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(apiToken)),
            currentProviderId: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty)),
            maxPlanCategories: @planMaxCategories
        };
    </script>
    <script src="~/js/views/profile/index.js" asp-append-version="true"></script>
}
