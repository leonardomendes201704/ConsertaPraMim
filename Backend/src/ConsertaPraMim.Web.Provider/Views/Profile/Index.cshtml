@using ConsertaPraMim.Domain.Enums
@using System.Globalization
@model ConsertaPraMim.Application.DTOs.UserProfileDto
@{
    ViewData["Title"] = "Meu Perfil";
    var categories = Enum.GetValues(typeof(ServiceCategory)).Cast<ServiceCategory>();
}

<div class="container py-4" style="max-width: 900px;">
    <div class="mb-4">
        <h1 class="h3 fw-bold">Configurações do Perfil</h1>
        <p class="text-muted">Gerencie suas informações e área de atuação.</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        </div>
    }

    <div class="row g-4">
        <!-- Personal Info -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 text-center">
                <div class="position-relative d-inline-block mx-auto mb-3">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "https://ui-avatars.com/api/?name=" + Model.Name + "&size=128&background=0D6EFD&color=fff" : Model.ProfilePictureUrl)" 
                         class="rounded-circle shadow-sm" style="width: 120px; height: 120px; object-fit: cover;">
                    <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" class="position-absolute bottom-0 end-0">
                        <label for="profileUpload" class="btn btn-primary btn-sm rounded-circle shadow" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; cursor: pointer;">
                            <i class="fas fa-camera"></i>
                        </label>
                        <input type="file" id="profileUpload" name="file" class="d-none" onchange="this.form.submit()">
                    </form>
                </div>
                <h5 class="fw-bold mb-1">@Model.Name</h5>
                <span class="badge bg-primary-subtle text-primary rounded-pill mb-3">Prestador Verificado</span>
                
                <div class="text-start mt-3 small">
                    <p class="mb-1 text-muted"><i class="fas fa-envelope me-2"></i> @Model.Email</p>
                    <p class="mb-1 text-muted"><i class="fas fa-phone me-2"></i> @Model.Phone</p>
                </div>

                <hr class="my-3">

                <div class="row text-center">
                    <div class="col">
                        <h6 class="fw-bold mb-0">@(Model.ProviderProfile?.Rating.ToString("F1") ?? "---")</h6>
                        <small class="text-muted small">Nota</small>
                    </div>
                    <div class="col border-start">
                        <h6 class="fw-bold mb-0">@(Model.ProviderProfile?.ReviewCount ?? 0)</h6>
                        <small class="text-muted small">Avaliações</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Settings Form -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4">
                <form asp-action="Update" method="post">
                    <h5 class="fw-bold mb-4">Área de Atuação e Categorias</h5>
                    
                    <div class="mb-4">
                        <label class="form-label fw-semibold">CEP Base de Atendimento</label>
                        <div class="input-group">
                            <input type="text"
                                   id="baseZipCode"
                                   name="baseZipCode"
                                   class="form-control rounded-start-4 p-3 border-light-subtle bg-light"
                                   placeholder="00000-000"
                                   value="@(Model.ProviderProfile?.BaseZipCode ?? string.Empty)">
                            <button type="button" class="btn btn-outline-primary rounded-end-4 px-4" id="lookupZipBtn">
                                <i class="fas fa-search-location me-2"></i>Buscar
                            </button>
                        </div>
                        <small class="text-muted d-block mt-2">Esse CEP sera o centro do seu raio de atendimento.</small>
                        <div id="zipLookupResult" class="small mt-2 text-muted"></div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Latitude (auto)</label>
                            <input type="text"
                                   id="baseLatitudePreview"
                                   class="form-control rounded-4 p-3 border-light-subtle bg-light"
                                   readonly
                                   value="@(Model.ProviderProfile?.BaseLatitude?.ToString("F6", CultureInfo.InvariantCulture) ?? string.Empty)">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Longitude (auto)</label>
                            <input type="text"
                                   id="baseLongitudePreview"
                                   class="form-control rounded-4 p-3 border-light-subtle bg-light"
                                   readonly
                                   value="@(Model.ProviderProfile?.BaseLongitude?.ToString("F6", CultureInfo.InvariantCulture) ?? string.Empty)">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Raio de Atendimento (Km)</label>
                        <div class="d-flex align-items-center">
                            <input type="range" name="radiusKm" class="form-range me-3" min="1" max="50" step="1" value="@(Model.ProviderProfile?.RadiusKm ?? 10)" id="radiusRange">
                            <span class="badge bg-primary p-2" id="radiusValue">@(Model.ProviderProfile?.RadiusKm ?? 10)km</span>
                        </div>
                        <small class="text-muted">Pedidos fora desse raio não aparecerão no seu radar.</small>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Suas Especialidades</label>
                        <div class="row g-2">
                            @foreach (var cat in categories)
                            {
                                var isChecked = Model.ProviderProfile?.Categories?.Contains(cat) ?? false;
                                <div class="col-6 col-md-4">
                                    <div class="form-check card p-2 border-light bg-light">
                                        <input class="form-check-input ms-0 me-2" type="checkbox" name="categories" value="@cat" id="cat_@cat" @(isChecked ? "checked" : "")>
                                        <label class="form-check-label small stretched-link cursor-pointer" for="cat_@cat">
                                            @cat
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary px-5 py-2 fw-bold shadow-sm">Salvar Alterações</button>
                    </div>
                </form>
            </div>

            <div class="card border-0 shadow-sm p-4 mt-4">
                <h5 class="fw-bold mb-4">Avaliações Recentes</h5>
                @{
                    var reviews = ViewBag.Reviews as IEnumerable<ConsertaPraMim.Application.DTOs.ReviewDto>;
                }

                @if (reviews == null || !reviews.Any())
                {
                    <p class="text-muted small">Nenhuma avaliação recebida ainda.</p>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var review in reviews.Take(5))
                        {
                            <div class="list-group-item px-0 py-3 border-light">
                                <div class="d-flex justify-content-between mb-1">
                                    <div class="text-warning small">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= review.Rating ? "" : "text-secondary opacity-25")"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("d")</small>
                                </div>
                                <p class="mb-0 small text-dark">@review.Comment</p>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const radiusRange = document.getElementById('radiusRange');
            const radiusValue = document.getElementById('radiusValue');
            const zipInput = document.getElementById('baseZipCode');
            const lookupButton = document.getElementById('lookupZipBtn');
            const latPreview = document.getElementById('baseLatitudePreview');
            const lngPreview = document.getElementById('baseLongitudePreview');
            const resultBox = document.getElementById('zipLookupResult');
            const resolveZipUrl = '@Url.Action("ResolveZip", "Profile")';

            if (radiusRange && radiusValue) {
                radiusRange.addEventListener('input', function (e) {
                    radiusValue.textContent = e.target.value + 'km';
                });
            }

            if (!zipInput || !lookupButton || !latPreview || !lngPreview || !resultBox) return;

            function onlyDigits(value) {
                return (value || '').replace(/\D/g, '');
            }

            function formatZip(value) {
                const digits = onlyDigits(value);
                if (digits.length <= 5) return digits;
                return digits.slice(0, 5) + '-' + digits.slice(5, 8);
            }

            function setMessage(text, type) {
                resultBox.className = 'small mt-2';
                if (type === 'success') {
                    resultBox.classList.add('text-success');
                } else if (type === 'error') {
                    resultBox.classList.add('text-danger');
                } else {
                    resultBox.classList.add('text-muted');
                }
                resultBox.textContent = text;
            }

            async function lookupZip() {
                const digits = onlyDigits(zipInput.value);
                if (digits.length !== 8) {
                    setMessage('Informe um CEP valido com 8 digitos.', 'error');
                    return;
                }

                lookupButton.disabled = true;
                setMessage('Buscando localizacao do CEP...', 'info');

                try {
                    const response = await fetch(resolveZipUrl + '?zipCode=' + encodeURIComponent(digits), {
                        method: 'GET',
                        headers: { 'Accept': 'application/json' }
                    });
                    const payload = await response.json();

                    if (!response.ok) {
                        throw new Error(payload.message || 'Nao foi possivel localizar esse CEP.');
                    }

                    zipInput.value = formatZip(payload.zipCode || digits);
                    latPreview.value = Number(payload.latitude).toFixed(6);
                    lngPreview.value = Number(payload.longitude).toFixed(6);
                    setMessage(payload.address || 'Localizacao encontrada com sucesso.', 'success');
                } catch (error) {
                    setMessage(error.message || 'Erro ao buscar CEP.', 'error');
                } finally {
                    lookupButton.disabled = false;
                }
            }

            zipInput.addEventListener('input', function () {
                zipInput.value = formatZip(zipInput.value);
            });

            zipInput.value = formatZip(zipInput.value);

            zipInput.addEventListener('blur', function () {
                if (onlyDigits(zipInput.value).length === 8) {
                    lookupZip();
                }
            });

            lookupButton.addEventListener('click', function () {
                lookupZip();
            });
        })();
    </script>
}
