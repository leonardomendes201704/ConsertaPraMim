@model IEnumerable<ConsertaPraMim.Domain.Entities.User>
@{
    ViewData["Title"] = "Gestão de Usuários";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 fw-bold">Gestão de Usuários</h1>
            <p class="text-muted">Ative ou desative contas e visualize detalhes dos perfis.</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="px-4 py-3">Usuário</th>
                            <th>Contato</th>
                            <th>Papel</th>
                            <th>Cadastro</th>
                            <th>Status</th>
                            <th class="text-end px-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=@user.Name&background=random" class="rounded-circle me-3" style="width: 40px;">
                                        <div>
                                            <div class="fw-bold">@user.Name</div>
                                            <small class="text-muted">ID: @user.Id.ToString().Substring(0, 8)</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small text-dark">@user.Email</div>
                                    <div class="small text-muted">@user.Phone</div>
                                </td>
                                <td>
                                    <span class="badge @(user.Role == ConsertaPraMim.Domain.Enums.UserRole.Provider ? "bg-primary-subtle text-primary" : "bg-secondary-subtle text-secondary") border rounded-pill px-3">
                                        @user.Role
                                    </span>
                                </td>
                                <td class="small text-muted">
                                    @user.CreatedAt.ToString("dd/MM/yy")
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success shadow-sm rounded-pill px-3">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger shadow-sm rounded-pill px-3">Bloqueado</span>
                                    }
                                </td>
                                <td class="text-end px-4">
                                    <form asp-action="ToggleUserStatus" asp-route-id="@user.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn @(user.IsActive ? "btn-outline-danger" : "btn-outline-success") btn-sm rounded-pill px-3">
                                            @(user.IsActive ? "Bloquear" : "Ativar")
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
