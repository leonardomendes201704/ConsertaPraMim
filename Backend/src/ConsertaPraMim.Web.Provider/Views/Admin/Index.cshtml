@model IEnumerable<ConsertaPraMim.Domain.Entities.User>
@{
    ViewData["Title"] = "Painel Administrativo";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 fw-bold text-dark">Visão Geral do Sistema</h1>
            <p class="text-muted">Monitoramento de métricas globais e atividades recentes.</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 bg-primary text-white">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-white-50 small text-uppercase fw-bold">Total Usuários</h6>
                        <h2 class="fw-bold mb-0">@ViewBag.TotalUsers</h2>
                    </div>
                    <i class="fas fa-users fa-2x text-white-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 bg-success text-white">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-white-50 small text-uppercase fw-bold">Prestadores</h6>
                        <h2 class="fw-bold mb-0">@ViewBag.TotalProviders</h2>
                    </div>
                    <i class="fas fa-tools fa-2x text-white-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 bg-info text-white">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-white-50 small text-uppercase fw-bold">Pedidos Ativos</h6>
                        <h2 class="fw-bold mb-0">@ViewBag.ActiveRequests</h2>
                    </div>
                    <i class="fas fa-clipboard-list fa-2x text-white-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 bg-warning text-white">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-white-50 small text-uppercase fw-bold">Total Pedidos</h6>
                        <h2 class="fw-bold mb-0">@ViewBag.TotalRequests</h2>
                    </div>
                    <i class="fas fa-chart-line fa-2x text-white-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Usuários Recentes</h5>
                    <a asp-action="Users" class="btn btn-primary btn-sm rounded-pill px-3">Ver Todos</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th class="px-4">Nome</th>
                                    <th>E-mail</th>
                                    <th>Papel</th>
                                    <th>Status</th>
                                    <th>Data Cadastro</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="px-4">
                                            <div class="d-flex align-items-center">
                                                <img src="https://ui-avatars.com/api/?name=@user.Name&background=random" class="rounded-circle me-3" style="width: 32px;">
                                                <span class="fw-semibold">@user.Name</span>
                                            </div>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>
                                            <span class="badge @(user.Role == ConsertaPraMim.Domain.Enums.UserRole.Provider ? "bg-primary" : "bg-secondary") rounded-pill">
                                                @user.Role
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(user.IsActive ? "bg-success" : "bg-danger") rounded-pill">
                                                @(user.IsActive ? "Ativo" : "Inativo")
                                            </span>
                                        </td>
                                        <td class="text-muted small">@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
