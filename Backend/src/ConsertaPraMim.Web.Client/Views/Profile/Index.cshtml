@model ConsertaPraMim.Application.DTOs.UserProfileDto
@{
    ViewData["Title"] = "Meu Perfil";
    var hasCustomProfilePicture = !string.IsNullOrWhiteSpace(Model.ProfilePictureUrl);
    var profilePictureUrl = string.IsNullOrWhiteSpace(Model.ProfilePictureUrl)
        ? $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(Model.Name)}&size=128&background=2563eb&color=fff"
        : Model.ProfilePictureUrl;
    var maskedPhone = FormatPhoneBr(Model.Phone);

    static string FormatPhoneBr(string? phone)
    {
        var digits = new string((phone ?? string.Empty).Where(char.IsDigit).ToArray());
        if (digits.Length == 11)
        {
            return $"({digits[..2]}) {digits.Substring(2, 5)}-{digits.Substring(7, 4)}";
        }

        if (digits.Length == 10)
        {
            return $"({digits[..2]}) {digits.Substring(2, 4)}-{digits.Substring(6, 4)}";
        }

        return phone ?? string.Empty;
    }
}

<div class="container py-4" style="max-width: 920px;">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-2">
        <div>
            <h1 class="h3 fw-bold mb-1">Meu Perfil</h1>
            <p class="text-muted mb-0">Consulte seus dados e personalize sua foto.</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm mb-4">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm mb-4">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 text-center">
                    <img src="@profilePictureUrl"
                         alt="Foto de perfil"
                         class="rounded-circle shadow-sm mb-3"
                         style="width: 120px; height: 120px; object-fit: cover;" />
                    <h5 class="fw-bold mb-1">@Model.Name</h5>
                    <span class="badge bg-primary-subtle text-primary rounded-pill px-3">Cliente</span>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Dados da Conta</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small text-uppercase fw-bold">Nome</label>
                            <input class="form-control bg-light" value="@Model.Name" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small text-uppercase fw-bold">Email</label>
                            <input class="form-control bg-light" value="@Model.Email" readonly disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small text-uppercase fw-bold">Telefone</label>
                            <input class="form-control bg-light" value="@maskedPhone" readonly />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Foto de Perfil</h5>
                    <form asp-action="UpdatePicture" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="profilePicture" class="form-label">Enviar imagem</label>
                            <input id="profilePicture"
                                   name="profilePicture"
                                   type="file"
                                   class="form-control"
                                   accept=".jpg,.jpeg,.png,.webp,image/jpeg,image/png,image/webp"
                                   required />
                            <div class="form-text">
                                Formatos aceitos: JPG, PNG e WEBP. Tamanho maximo: 5MB.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-camera me-2"></i>Enviar foto
                        </button>
                    </form>

                    <form asp-action="RemovePicture" method="post" class="mt-3">
                        <button type="submit"
                                class="btn btn-outline-secondary px-4"
                                @(hasCustomProfilePicture ? null : "disabled")
                                title="Remover foto e voltar para avatar com iniciais">
                            <i class="fas fa-user-circle me-2"></i>Remover foto
                        </button>
                        <div class="form-text mt-2">
                            Ao remover, o sistema exibe o avatar padrao com suas iniciais.
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
