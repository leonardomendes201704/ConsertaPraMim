@{
    Layout = null;
    ViewData["Title"] = "Criar Conta";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConsertaPraMim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .register-card {
            border-radius: 24px;
            border: none;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background: #fff;
        }
        .register-sidebar {
            background: #2563eb;
            color: #fff;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .form-control {
            border-radius: 12px;
            padding: 0.8rem 1.2rem;
            border: 1px solid #e2e8f0;
            background-color: #f8fafc;
        }
        .btn-primary {
            background-color: #2563eb;
            border: none;
            border-radius: 12px;
            padding: 0.8rem;
            font-weight: 600;
        }
        .logo {
            font-weight: 800;
            font-size: 1.8rem;
            color: #2563eb;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">
                <div class="card register-card">
                    <div class="row g-0">
                        <div class="col-md-5 register-sidebar d-none d-md-flex">
                            <h2 class="fw-bold mb-4">Milhares de clientes satisfeitos todos os dias.</h2>
                            <ul class="list-unstyled opacity-75">
                                <li class="mb-3"><i class="fas fa-check-circle me-2"></i> Orçamentos grátis</li>
                                <li class="mb-3"><i class="fas fa-check-circle me-2"></i> Profissionais avaliados</li>
                                <li><i class="fas fa-check-circle me-2"></i> Suporte humanizado</li>
                            </ul>
                        </div>
                        <div class="col-md-7 p-4 p-md-5">
                            <div class="logo"><i class="fas fa-wrench me-2"></i>Conserta</div>
                            <h4 class="fw-bold mb-1">Crie sua conta grátis</h4>
                            <p class="text-muted mb-4">Leva menos de 1 minuto para começar.</p>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger border-0 rounded-4 small mb-3">
                                    <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
                                </div>
                            }

                            <form asp-action="Register" method="post">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label small fw-bold text-muted text-uppercase mb-1">Nome Completo</label>
                                        <input type="text" name="name" class="form-control" placeholder="José da Silva" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold text-muted text-uppercase mb-1">E-mail</label>
                                        <input type="email" name="email" class="form-control" placeholder="jose@email.com" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold text-muted text-uppercase mb-1">WhatsApp</label>
                                        <input id="registerPhone" type="tel" name="phone" class="form-control" inputmode="numeric" autocomplete="tel-national" maxlength="15" placeholder="(11) 99999-9999" required>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <label class="form-label small fw-bold text-muted text-uppercase mb-1">Senha</label>
                                        <input type="password" name="password" class="form-control" placeholder="Crie uma senha forte" required>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 mb-3 shadow mt-3">Criar Minha Conta</button>
                                <div class="text-center">
                                    <span class="text-muted small">Já possui conta?</span>
                                    <a asp-action="Login" class="text-primary small fw-bold text-decoration-none ms-1">Fazer Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/views/account/register.js" asp-append-version="true"></script>
</body>
</html>
